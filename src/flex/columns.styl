// Should Overwrite Others if available
.flex-columns
.columns
  display: flex
  flex-direction: row
  justify-content: center
  align-items: center

  &.flex-wrap
  &.wrap
    flex-wrap: wrap

    & > *
      flex: initial

  &.flex-initial
    & > *
      flex: initial

  & > *
    flex: 1

  +below($phoneWidth)
    flex-direction: column
